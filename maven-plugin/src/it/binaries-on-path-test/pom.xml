<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    https://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>io.github.cmake-maven-plugin</groupId>
	<artifactId>binaries-on-path-test</artifactId>
	<version>0.0.1</version>
	<packaging>jar</packaging>
	<name>Binaries on Path Test for CMake Maven Plugin</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<cmake.binaries.dir>${project.build.directory}/cmake/manual-download/bin</cmake.binaries.dir>
		<cmake.download>false</cmake.download>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>cmake-download</id>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<skip>${cmake.shipsWithPlatform}</skip>
							<artifactItems>
								<artifactItem>
									<groupId>${cmake.plugin.groupid}</groupId>
									<artifactId>cmake-binaries</artifactId>
									<version>${cmake.plugin.version}</version>
									<classifier>${cmake.platform}</classifier>
									<type>jar</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/cmake/manual-download</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>${cmake.plugin.groupid}</groupId>
				<artifactId>cmake-maven-plugin</artifactId>
				<version>${cmake.plugin.version}</version>
				<configuration>
					<environmentVariables>
						<PATH>${env.PATH}${path.separator}${cmake.binaries.dir}</PATH>
					</environmentVariables>
				</configuration>
				<executions>
					<execution>
						<id>cmake-generate</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<sourcePath>${project.basedir}</sourcePath>
						</configuration>
					</execution>
					<execution>
						<id>cmake-compile</id>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
					<execution>
						<id>cmake-test</id>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.4.2</version>
				<executions>
					<execution>
						<id>default-jar</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>